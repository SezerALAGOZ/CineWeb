@model CineWeb.Models.CustomerMembershipTypeViewModel
@{
                /**/

                ViewBag.Title = "Create";
}

<h2>Create a New Customer</h2>

@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(p => p.Customer.CustomerName, "Customer Name")
        @Html.TextBoxFor(p => p.Customer.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Customer.CustomerName, "Required*")
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Customer.BirthDate, "Date of Birth")
        @Html.TextBoxFor(p => p.Customer.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Customer.MembershipType.MembershipTypeName, "Membership Type")
        @Html.DropDownListFor(p => p.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "MembershipTypeId", "MembershipTypeName", new { @class = "form-control" }), "Select membership type")
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(p => p.Customer.IsSubscribedToNewsLetter)
            Is Subscribed to NewsLetter?
        </label>
    </div>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Customer.CustomerId)
    <button type="submit" class="btn btn-primary">Save</button>
}

